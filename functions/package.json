{
  "name": "hk-explorer-functions",
  "description": "Firebase Cloud Functions with Genkit AI for HK Explorer",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "genkit:start": "genkit start -- npx tsx --watch src/index.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "genkit": "^1.0.0",
    "@genkit-ai/compat-oai": "^1.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsx": "^4.7.0",
    "@types/node": "^20.0.0"
  },
  "private": true
}
